<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saradabar.cpadcustomizetool">

    <permission-group
        android:label="CPad Customize Tool"
        android:name="android.permission-group.KOBOLD" />

    <permission
        android:permissionGroup="android.permission-group.KOBOLD"
        android:name="com.saradabar.cpadcustomizetool.permission.ACCESS_DEVICE_OWNER"
        android:label="デバイスオーナーへのアクセス"
        android:protectionLevel="dangerous" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_SECURE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_SETTINGS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="jp.co.benesse.dcha.permission.ACCESS_SYSTEM" />
    <uses-permission android:name="com.saradabar.cpadcustomizetool.permission.ACCESS_DEVICE_OWNER" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:ignore="GoogleAppIndexingWarning"
        android:allowBackup="false">

        <activity android:name=".WelAppActivity" android:theme="@style/WelcomeScreenTheme.Light"/>

        <activity
            android:clearTaskOnLaunch="true"
            android:name=".MainActivity"
            android:label="@string/start_check_activity"
            android:theme="@style/StartTheme"
            android:exported="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.HOME"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".StartActivity"
            android:label="@string/main_normal_settings_activity"
            android:theme="@style/MainPreference" />

        <activity
            android:name=".check.UpdateActivity"
            android:label="@string/app_update_activity"
            android:theme="@style/MainTheme"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:name=".menu.InformationActivity"
            android:label="@string/app_info_activity"
            android:theme="@style/MainTheme"
            tools:ignore="InnerclassSeparator" />

        <activity
            android:clearTaskOnLaunch="true"
            android:documentLaunchMode="always"
            android:name=".mode.emergency.EmergencyActivity"
            android:label="@string/emergency_activity"
            android:theme="@style/ActivityTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:clearTaskOnLaunch="true"
            android:documentLaunchMode="always"
            android:name=".mode.normal.NormalActivity"
            android:label="@string/normal_mode_activity"
            android:theme="@style/ActivityTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:clearTaskOnLaunch="true"
            android:documentLaunchMode="always"
            android:name=".RebootActivity"
            android:label="@string/reboot"
            android:icon="@drawable/reboot"
            android:theme="@style/ActivityTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".set.BlockerActivity"
            android:theme="@style/MainTheme"
            tools:ignore="InnerclassSeparator"
            android:label="@string/block_to_uninstall" />

        <activity
            android:name=".menu.CrashLog"
            android:theme="@style/MainTheme"
            android:label="クラッシュ履歴" />

        <service
            android:name=".service.KeepService"
            android:label="@string/service_keep_service"
            tools:ignore="InnerclassSeparator" />

        <service
            android:name=".service.ProtectKeepService"
            android:label="@string/service_protect_keep_service"
            android:process=":protect"
            tools:ignore="InnerclassSeparator" />

        <service android:name=".service.DeviceOwnerService" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.saradabar.cpadcustomizetool.service.DeviceOwnerService"/>
            </intent-filter>
        </service>


        <receiver
            android:name=".Receiver.UpdateReceiver"
            tools:ignore="InnerclassSeparator"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".Receiver.BootCompletedReceiver"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED"
            tools:ignore="InnerclassSeparator"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".Receiver.InstallReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <data android:scheme="package"/>
            </intent-filter>
        </receiver>

        <receiver
            android:name=".Receiver.AdministratorReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="false">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/administrator" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>