<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <PreferenceCategory app:iconSpaceReserved="false">
                <Preference
                    app:iconSpaceReserved="false"
                    android:key="intent_block_to_uninstall_settings"
                    android:title="ユーザーアプリのアンインストールを無効"
                    android:summary="ユーザーアプリのアンインストールをブロックします" />

                <SwitchPreference
                    app:iconSpaceReserved="false"
                    android:key="permission_forced"
                    android:title="パーミッションポリシー" />

                <Preference
                    app:iconSpaceReserved="false"
                    android:key="owner_silent_install"
                    android:title="サイレントインストール"
                    android:summary="「apks」をインストールするには長押しして選択してください"/>

                <Preference
                    app:iconSpaceReserved="false"
                    android:key="disable_device_owner"
                    android:title="DeviceOwnerを無効"
                    android:summary="DeviceOwnerの機能は使用できなくなります\nアンインストールブロックをしているアプリは維持されます"/>

                <Preference
                    app:iconSpaceReserved="false"
                    app:selectable="false"
                    android:key="now_set_owner_package" />
        </PreferenceCategory>
</PreferenceScreen>