<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:iconSpaceReserved="false" android:title="起動設定">

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="switch_auto_update_check"
            android:title="起動時のアップデートチェックを無効" />

    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false" android:title="アプリ設定">

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="switch_is_change_settings_use_dcha"
            android:title="DchaServiceによる設定変更"
            android:summary="DchaServiceによってシステム設定を変更します" />

        <SwitchPreference
            app:iconSpaceReserved="false"
            android:key="switch_auto_usb_debug"
            android:title="デバイス起動時のUSBデバッグを有効"
            android:summary="有効にすると、デバイス起動時にUSBデバッグが自動的に無効にされるのを防ぎます" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false" android:title="アップデート設定">

        <ListPreference
            app:iconSpaceReserved="false"
            android:enabled="false"
            android:selectable="false"
            android:key="app_update_mode"
            android:title="アップデートモードを選択"
            android:dialogTitle="モードを選択してください"
            android:defaultValue="1"
            android:entries="@array/app_update_mode_text"
            android:entryValues="@array/app_update_mode_value" />

    </PreferenceCategory>

    <PreferenceCategory app:iconSpaceReserved="false" android:title="アプリログ">

        <Preference
            app:iconSpaceReserved="false"
            android:key="debug_log"
            android:title="クラッシュ履歴" />

        <Preference
            app:iconSpaceReserved="false"
            android:key="debug_log_remove"
            android:title="クラッシュ履歴消去" />

    </PreferenceCategory>

</PreferenceScreen>